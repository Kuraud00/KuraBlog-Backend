<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kura.mapper.UserMapper">

    <insert id="insertNewUser">
        insert into user(username,password,register_time)
        values (#{username},#{password},#{registerTime})
    </insert>

    <update id="updateByUser">
        update user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="avatar != null and avatar != ''">
                avatar = #{avatar},
            </if>
            <if test="birthday != null">
                birthday = #{birthday},
            </if>
            <if test="email != null and email != ''">
                email = #{email}
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="saveRefreshToken">
        update user
        set refresh_token = #{refreshToken} where id = #{id}
    </update>

    <select id="getByUsernameAndPassword" resultType="kura.pojo.User">
        select *
        from user
        where username = #{username} and password = #{password}
    </select>

    <select id="getByUsername" resultType="kura.pojo.User">
        select *
        from user
        where username = #{username}
    </select>

    <select id="getById" resultType="kura.pojo.User">
        select *
        from user
        where id = #{id}
    </select>
    <select id="findRefreshToken" resultType="kura.pojo.User">
        select *
        from user
        where refresh_token = #{refreshToken}
    </select>
    <select id="getByUser" resultType="kura.pojo.User">
        select *
        from user
        <where>
            <if test="id != null">
                id = #{id} and
            </if>
            <if test="username != null and username != ''">
                username = #{username} and
            </if>
            <if test="password != null and password != ''">
                password = #{password} and
            </if>
            <if test="refreshToken != null and refreshToken != ''">
                refresh_token = #{refreshToken}
            </if>
        </where>
    </select>

</mapper>